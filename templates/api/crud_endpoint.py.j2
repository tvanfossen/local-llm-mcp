    """Format {{ resource_name }} information for display"""
    info = f"ðŸ“„ **{{ resource_name|title }} Details**\n\n"
    
    {% for field in display_fields %}
    info += f"{% if field == primary_key %}ðŸ†”{% elif field in ['name', 'title'] %}ðŸ“{% elif field in ['email'] %}ðŸ“§{% elif field in ['created_at', 'updated_at'] %}ðŸ“…{% else %}ðŸ“‹{% endif %} **{{ field|title|replace('_', ' ') }}:** {record.get('{{ field }}', 'N/A')}\n"
    {% endfor %}
    
    return info


def _format_{{ resource_name }}_summary(record: dict) -> str:
    """Format {{ resource_name }} summary for listing"""
    {% if summary_fields %}
    return (
        f"ðŸ”¸ **{record.get('{{ summary_fields[0] }}', 'N/A')}** (`{record.get('{{ primary_key }}')}`) - "
        f"{record.get('{{ summary_fields[1] }}', 'N/A')}"
    )
    {% else %}
    return f"ðŸ”¸ **{{ resource_name|title }}** (`{record.get('{{ primary_key }}')}`) - {record.get('created_at', 'N/A')}"
    {% endif %}

